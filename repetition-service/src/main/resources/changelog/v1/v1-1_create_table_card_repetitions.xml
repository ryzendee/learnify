<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="Ryazantsev Dmitry">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="card_repetitions"/>
            </not>
        </preConditions>

        <createTable tableName="card_repetitions">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="card_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="learning_module_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="ease_factor" type="double precision" defaultValue="2.5">
                <constraints nullable="false"/>
            </column>

            <column name="repetition_count" type="INT" defaultValue="0">
                <constraints nullable="false"/>
            </column>

            <column name="day_interval" type="INT" defaultValue="1">
                <constraints nullable="false"/>
            </column>

            <column name="last_repetition_date" type="TIMESTAMP"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="next_repetition_date" type="TIMESTAMP"
                    defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
